<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/Remainingtime_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/accent"
        android:padding="10dp"
        android:text="60S"
        android:textColor="@color/primary_text"
        android:textColorHighlight="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/remaininglife_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/accent"
        android:padding="10dp"
        android:text="0/1"
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#AA00FF"
        android:padding="10dp"
        android:text="31 + 7"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Remainingtime_textView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="42dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/question_textView"
        app:layout_constraintStart_toEndOf="@+id/Remainingtime_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/interfacenn" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_textView">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/gamenumbutton"
                android:onClick="answertap"
                android:padding="20dp"
                android:tag="2"
                android:text="20"
                android:textColor="@color/primary_text"
                android:textSize="36sp"
                android:textStyle="normal"
                app:layout_column="2"
                app:layout_gravity="fill"
                app:layout_row="0" />

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/gamenumbutton"
                android:onClick="answertap"
                android:padding="20dp"
                android:tag="4"
                android:text="20"
                android:textColor="@color/primary_text"
                android:textSize="75sp"
                android:textStyle="normal"
                app:layout_column="1"
                app:layout_gravity="center"
                app:layout_row="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/gamenumbutton"
                android:onClick="answertap"
                android:padding="20dp"
                android:tag="5"
                android:text="20"
                android:textColor="@color/primary_text"
                android:textSize="75sp"
                android:textStyle="normal"
                app:layout_column="2"
                app:layout_gravity="fill"
                app:layout_row="1" />

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/gamenumbutton"
                android:onClick="answertap"
                android:padding="20dp"
                android:tag="3"
                android:text="20"
                android:textColor="@color/primary_text"
                android:textSize="75sp"
                android:textStyle="normal"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="1" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>